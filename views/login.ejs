<% include ./partials/header %>

<nav>
        <div class="blur-effect not-blurry">
            <div class="logo">
                <a href="/campgrounds"><div class="campground"><h1>Campground</div>
                <div class="quarter-width">
                    <div class="snob"><h1>Snob</h1></div></h1>
                </div>
                </a>
            </div>
