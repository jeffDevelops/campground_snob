<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">What Did You Think of <%= campground.name %>?</h1>
        <div style="width: 30%; margin: 35px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Write your comments here."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>