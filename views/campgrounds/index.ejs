<!DOCTYPE html>
<html>
    <head>
        <title>Campground Snob</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/assets/font-awesome-4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch:700|Open+Sans:300,400,600|Yellowtail" rel="stylesheet"> 
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body id="index">
    
    <div class="navigation blur-effect not-blurry">
        <div class="container-third1 blur-effect not-blurry">
            <div class="logo">
                <a tabindex="1" href="/campgrounds"><div class="campground"><h1>Campground</h1></div>
                <div class="quarter-width">
                    <div class="snob"><h1>Snob</h1></div></h1>
                </div>
                </a>
            </div>
        </div>
        
    <!--Flash alert Success-->   
        <div class="container-third2 blur-effect not-blurry "> 
            <% if(success && success.length > 0) { %>
                 <div class="alert alert-success" role="alert">
                    <%= success %>    
                </div>
            <% }; %>
        </div> 
    <!--Flash alert Success-->
        
        <div class="container-third3 blur-effect not-blurry">
            <nav class="index-nav">
                <ul class="nav navbar-nav navbar-right">
                        <li><a tabindex="2" href="#">About Us</a></li>
                    <% if(!currentUser) { %>
                        <li><a tabindex="3" href="/login">Log In</a></li>
                        <li><a class="hello right-li" tabindex="4" href="#">Become a Campground Snob</a></li>
                    <% } else { %>
                        <li><a tabindex="2" href="/campgrounds/new">Rate Your Last Trip</a></li>
                        <li><a tabindex="3" href="#">Signed In As <strong><%= currentUser.username %></strong></a></li>
                        <li><a tabindex="4" href="/logout">Log Out</a></li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>

<div class="acct-for-abs-positioning">
    <div class="hero-background1 blur-effect not-blurry"></div>
</div>
        
    <aside id="sliding-aside" class="aside">
        <div id="sliding" class="half-width-left">
            <p>That camping trip was</p>
            <div class="fire">
            </div>
            <a class="btn btn-primary btn-large" tabindex="5" href="/campgrounds/new">Tell us about it!</a>
        </div>
        <div class="half-width-right">
            <% if(error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error + '. Please try another username.' %>    
                </div>
            <% } else { %>
                <p>Join Our Ecosystem</p>
            <% } %>
            <form id="aside-form" class="aside-form" action="/register" method="POST">
                <input class="hello" tabindex="6" type="text" name="username" placeholder="Username">
                <input class="hello" tabindex="7" type="password" name="password" placeholder="Password">
                <button class="hello btn btn-primary btn-large" tabindex="8">Become a Campground Snob!</button>
            </form>
            <i id="dismiss" class="invisible fa fa-angle-right" aria-hidden="true" tabindex="9"></i>
        </div>
    </aside>


    <main class="blur-effect not-blurry">
        <h3>Recently Added Campgrounds</h3>
        <div id="masonry">
            <% campgrounds.forEach(function(campground) { %>
                <div class="item grid-sizer">
                    <a href="/campgrounds/<%= campground._id %>">
                        <img src="<%= campground.image %>">
                        <div class="caption">
                            <h4><%= campground.name.substring(0,35) %></h4>
                            <p class="description"><%= campground.description.substring(0, 110) + "..." %></p>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </main>

<script type="text/javascript" language="javascript" src="/scripts/aside.js"></script>
<script type="text/javascript" language="javascript" src="/scripts/masonry.pkgd.min.js"></script>
<script type="text/javascript" language="javascript" src="/scripts/imagesLoaded.pkgd.min.js"></script>
<script type="text/javascript" language="javascript" src="/scripts/masonry-init.js"></script>

<% include ../partials/footer %>